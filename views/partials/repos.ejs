<div class="container px-4 mx-auto">
  <div
    class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 mt-12 md:mt-6"
  >
    <% for (repo of repos) { %>
    <div class="rounded-lg border-2 grid grid-cols-1 px-3 py-2">
      <span class="text-2xl font-bold text-white"><%= repo.name %></span>
      <span class="text-base text-gray-500 pl-2"><%= repo.description %></span>
      <div>
        <% for(topic of repo.topics) { %>
        <span
          class="px-2 py-1 bg-white text-gray-800 rounded-full border border-gray-200 mr-2 my-1 inline-flex items-center"
        >
          <%= topic %>
        </span>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
